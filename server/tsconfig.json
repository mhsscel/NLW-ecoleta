{
    "compileOnSave": true,
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./build",
      "module": "commonjs",
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2016",
      "typeRoots": ["node_modules/@types"],
      "lib": ["es2017", "dom"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./build"]
  }
  